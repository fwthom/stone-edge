<div class="form-container">
  <h2 class="form-title">Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "sign-up-form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <!-- First Name -->
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "given-name" } %>

      <!-- Last Name -->
      <%= f.input :last_name,
                  required: true,
                  input_html: { autocomplete: "family-name" } %>

      <!-- Country Dropdown -->
      <%= f.input :country,
                  as: :select,
                  collection: ["United States", "Canada", "United Kingdom", "Australia", "France", "Germany", "India", "Japan", "China"],
                  prompt: "Choisissez votre Pays",
                  required: true,
                  input_html: { class: "country-dropdown" } %>

      <!-- Email -->
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email" } %>

      <!-- Password -->
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>

      <!-- Password Confirmation -->
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
