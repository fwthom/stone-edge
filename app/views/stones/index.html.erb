
<h1>Trouve ta pierre... </h1>

<div class="border border-2 my-3 p-2">Barre de recherche</div>

<div class="d-flex">
  <div class="cards-stone">
    <% @stones.each do |stone| %>

<%= link_to stone_path(stone), class: "card-link" do %>
        <div class="card-stone">
          <div class="card-img-top">
          <% if stone.photo.attached? %>
            <%= cl_image_tag stone.photo.key, style: "width: 200px;" %>
          <% end %>

          </div>
          <div class="card-body">
            <h5><%= stone.name %></h5>
            <p>Category: <%= stone.category.name %></p>
            <p class="card-text"> Backstory:<%= truncate(stone.backstory, length: 25, separator: ' ', omission: '...') %></p>
            <p class="price text-end" style=""><%= stone.daily_price %>â‚¬ par jour</p>
          </div>
        </div>
      <% end %>

      <div class="card border-2">
        <h1><%= link_to stone.name, stone_path(stone) %></h1>
        <% if stone.photo.attached? %>
          <%= cl_image_tag stone.photo.key, style: "width: 200px;" %>
        <% end %>
        <p><%= stone.backstory %></p>
        <p><%= stone.personnality_traits %></p>
        <p><%= stone.condition %></p>
        <p><%= stone.size %></p>
        <p><%= stone.category %></p>
      </div>

    <% end %>
    </div>

    <div class="map-stone border border-2 ms-4">
      <p>MAP HERE</p>
    </div>

  </div>

