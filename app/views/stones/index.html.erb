<div class="d-flex">
  <div class="cards-stone">
    <% @stones.each do |stone| %>

      <%= link_to stone_path(stone), class: "card-link" do %>
        <div class="card-stone">
          <div class="card-img-top">
            <%= image_tag stone.image_url, style:"width: 100%" %>
          </div>
          <div class="card-body">
            <h5><%= stone.name %></h5>
            <p>Category: <%= stone.category.name %></p>
            <p class="card-text"> Backstory:<%= truncate(stone.backstory, length: 25, separator: ' ', omission: '...') %></p>
            <p class="price text-end" style=""><%= stone.daily_price %>â‚¬ par jour</p>
          </div>
        </div>
      <% end %>

    <% end %>
    </div>

    <div class="map-stone border border-2 ms-4">
      <p>MAP HERE</p>
    </div>

  </div>

