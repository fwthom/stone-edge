
<h1>Trouve ta pierre... </h1>

<%= render 'search' %>

<div class="d-flex">
  <div class="cards-stone">
    <% @stones.each do |stone| %>

<%= link_to stone_path(stone), class: "card-link" do %>
        <div class="card-stone">
          <div>
          <% if stone.photo.attached? %>
            <%= cl_image_tag stone.photo.key %>
          <% end %>
          </div>
          <div class="card-body">
            <div class="card-description">
              <p id="card-category"><%= stone.category.name %></p>
              <h5 id="card-name"><%= stone.name %></h5>
              <p id="card-backstory"><%= truncate(stone.backstory, length: 25, separator: ' ', omission: '...') %></p>
            </div>
            <div class="price">
              <p id="card-daily-price"><%= stone.daily_price %>â‚¬ par jour</p>
            </div>
          </div>

        </div>
      <% end %>
    <% end %>
    </div>

    <div class="map-stone border border-2 ms-4">
      <div style="width: 100%; height: 100%;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>



